{
  "identity": {
    "name": "SOA East LLC CRM",
    "persona": "E1 - The Anti-AI Designer",
    "description": "A high-end, minimal, earth-tone SaaS dashboard for promotional products. Muted, grounded, and functional.",
    "emotional_tone": "Professional, Organic, Efficient, Trustworthy",
    "theme_mode": "light-only"
  },
  "typography": {
    "primary_font": "DM Sans, sans-serif",
    "secondary_font": "Instrument Serif, serif",
    "google_fonts_url": "https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Instrument+Serif:ital@0;1&display=swap",
    "usage": {
      "headings": {
        "font": "Instrument Serif",
        "weight": "400",
        "tracking": "normal",
        "sizes": {
          "h1": "text-4xl md:text-5xl",
          "h2": "text-3xl",
          "h3": "text-2xl"
        }
      },
      "body": {
        "font": "DM Sans",
        "weight": "400",
        "tracking": "normal"
      },
      "labels": {
        "font": "DM Sans",
        "weight": "700",
        "size": "text-[10px]",
        "case": "uppercase",
        "tracking": "tracking-[1.5px]"
      }
    }
  },
  "colors": {
    "palette": {
      "background": "#f6f5f1",
      "card": "#ffffff",
      "sidebar": "#ffffff",
      "primary_text": "#1a1a1a",
      "secondary_text": "#7a7a7a",
      "accent_primary": "#2d6a4f",
      "accent_light": "#d8f3dc",
      "border": "#e8e7e3",
      "status": {
        "danger": "#d64545",
        "warning": "#e6a817",
        "info": "#4a5fd7",
