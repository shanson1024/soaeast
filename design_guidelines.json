    }
  },
  "layout": {
    "grid_system": "Bento Grid - Mode B (High Density)",
    "container_style": "max-w-[1600px] mx-auto p-6 md:p-8",
    "spacing": {
      "dashboard_gap": "gap-6",
      "card_padding": "p-6"
    }
  },
  "components": {
    "cards": {
      "bg": "bg-white",
      "border": "border border-[#e8e7e3]",
      "radius": "rounded-[14px]",
      "shadow": "shadow-[0_2px_10px_rgba(0,0,0,0.03)] hover:shadow-[0_4px_20px_rgba(0,0,0,0.06)] transition-all duration-300"
    },
    "buttons": {
      "primary": "bg-[#2d6a4f] text-white hover:bg-[#23533e] rounded-[10px] px-6 py-2 transition-colors",
      "secondary": "bg-white border border-[#e8e7e3] text-[#1a1a1a] hover:bg-[#f6f5f1] rounded-[10px] px-6 py-2 transition-colors",
      "danger": "bg-[#d64545] text-white hover:bg-[#b53535] rounded-[10px] px-6 py-2"
    },
    "sidebar": {
      "bg": "bg-white",
      "border": "border-r border-[#e8e7e3]",
      "item_active": "bg-[#d8f3dc] text-[#2d6a4f]",
      "item_inactive": "text-[#7a7a7a] hover:text-[#1a1a1a] hover:bg-[#f6f5f1]"
    },
    "inputs": {
      "style": "bg-white border border-[#e8e7e3] rounded-[10px] focus:ring-2 focus:ring-[#2d6a4f]/20 focus:border-[#2d6a4f]"
    }
  },
