  "instructions_to_main_agent": {
    "libraries": {
      "icons": "lucide-react",
      "charts": "recharts",
      "drag_drop": "@hello-pangea/dnd",
      "date": "date-fns",
      "notifications": "sonner"
    },
    "implementation_rules": [
      "CRITICAL: Do not implement Dark Mode. Force Light Mode styles.",
      "CRITICAL: Use 'Instrument Serif' ONLY for Page Titles and Major Section Headings.",
      "CRITICAL: Use 'DM Sans' for all other text.",
      "CRITICAL: Add 'data-testid' to all interactive elements.",
      "CRITICAL: Sidebar must be collapsible on mobile.",
      "CRITICAL: Use the exact hex codes provided. Do not rely on default Tailwind colors.",
      "LAYOUT: Dashboard should be dense but breathing. Use the 'Bento Grid' approach.",
      "INTERACTION: Add subtle micro-interactions (hover lift, button press scale) using framer-motion if possible, or CSS transitions."
    ],
    "universal_guidelines": [
      "Avoid 'AI Slop' aesthetics (no generic gradients, no centered everything).",
      "Use glassmorphism sparingly (only for sticky headers/overlays).",
      "Focus on 'Optical Alignment' over strict geometric alignment.",
      "Never use 'Inter' font. Stick to the specified typography."
    ]
  }
